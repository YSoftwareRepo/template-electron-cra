{
    "name": "@tecra-pkg/hooks",
    "version": "0.9.0",
    "description": "React hooks for tecra.",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "typings": "lib/index.d.ts",
    "homepage": "https://github.com/YSoftwareRepo/template-electron-cra#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/YSoftwareRepo/template-electron-cra/issues"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YSoftwareRepo/template-electron-cra.git",
        "directory": "packages/hooks"
    },
    "scripts": {
        "build": "concurrently -n esm,types \"pnpm run build:esm\" \"pnpm run build:types\"",
        "build:esm": "tsc --project tsconfigs/tsconfig.esm.json",
        "build:types": "tsc --project tsconfigs/tsconfig.types.json",
        "clean": "rimraf coverage lib tsconfigs/*.tsbuildinfo",
        "dev": "pnpm run build:esm --watch",
        "format": "prettier --write \"**/*.{cjs,css,html,js,jsx,mjs,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "pre-commit": "lint-staged",
        "test": "unit-test",
        "test-full": "unit-test",
        "typecheck": "tsc --project tsconfig.json --noEmit"
    },
    "dependencies": {
        "@tecra-pkg/utils-type": "workspace:*",
        "react": "^17.0.2"
    },
    "devDependencies": {
        "@tecra-config/eslint-config": "workspace:*",
        "@tecra-config/global-types": "workspace:*",
        "@tecra-config/scripts": "workspace:*",
        "@tecra-config/tsconfigs": "workspace:*",
        "@tecra-pkg/utils-test": "workspace:*",
        "@testing-library/react": "^12.1.5",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jest": "^29.5.2",
        "@types/lodash": "^4.14.189",
        "@types/react": "^17.0.50",
        "concurrently": "^7.4.0",
        "eslint": "^8.24.0",
        "lint-staged": "^13.0.3",
        "lodash": "^4.17.21",
        "prettier": "2.7.1",
        "react-dom": "^17.0.2",
        "rimraf": "^3.0.2",
        "typescript": "5.1.3"
    }
}
