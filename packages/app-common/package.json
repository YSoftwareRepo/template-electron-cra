{
    "name": "@ter/app-common",
    "version": "0.11.0",
    "description": "Common code for electron main process and electron renderer process.",
    "homepage": "https://github.com/YSoftwareRepo/template-electron-react#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/YSoftwareRepo/template-electron-react/issues"
    },
    "exports": {
        "./apis/app": {
            "types": "./lib/apis/app/index.d.ts",
            "default": "./lib/apis/app/index.js"
        },
        "./apis/types": {
            "types": "./lib/apis/types.d.ts",
            "default": "./lib/apis/types.js"
        },
        "./types": {
            "types": "./lib/types/index.d.ts",
            "default": "./lib/types/index.js"
        },
        "./utils": {
            "types": "./lib/utils/index.d.ts",
            "default": "./lib/utils/index.js"
        }
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YSoftwareRepo/template-electron-react.git",
        "directory": "packages/app-common"
    },
    "scripts": {
        "build": "concurrently -n esm,types \"pnpm run build:esm\" \"pnpm run build:types\"",
        "build:esm": "tsc --project tsconfigs/tsconfig.esm.json",
        "build:types": "tsc --project tsconfigs/tsconfig.types.json",
        "clean": "rimraf coverage lib tsconfigs/*.tsbuildinfo",
        "dev": "pnpm run build:esm -- --watch",
        "format": "prettier --write \"**/*.{cjs,css,html,js,jsx,mjs,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "pre-commit": "lint-staged",
        "test": "unit-test",
        "test-full": "unit-test",
        "typecheck": "tsc --project tsconfig.json --noEmit"
    },
    "devDependencies": {
        "@ter/eslint-config": "workspace:*",
        "@ter/scripts": "workspace:*",
        "@ter/tsconfigs": "workspace:*",
        "@types/jest": "^29.5.2",
        "concurrently": "^7.6.0",
        "eslint": "^8.42.0",
        "lint-staged": "^13.2.2",
        "prettier": "2.8.8",
        "rimraf": "^3.0.2",
        "typescript": "5.1.3"
    }
}
