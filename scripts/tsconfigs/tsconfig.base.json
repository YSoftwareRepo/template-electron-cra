{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "../..",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "esnext"],
        "listEmittedFiles": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "paths": {
            // common
            "#Common/*": ["src/common/*"],
            // main
            "#MUtils/*": ["src/main/Utils/*"],
            // renderer
            "#Assets/*": ["src/renderer/Assets/*"],
            "#RUtils/*": ["src/renderer/Utils/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "sourceMap": true,
        /**
         * The following options will be thruned on if option `--strict` is set:
         * - alwaysStrict
         * - noImplicitAny
         * - noImplicitThis
         * - strictBindCallApply
         * - strictFunctionTypes
         * - strictNullChecks
         * - strictPropertyInitialization
         * - useUnknownInCatchVariable
         */
        "strict": true,
        "target": "ES2018"
    }
}
