{
    "name": "template-electron-create-react-app",
    "version": "0.0.0",
    "description": "A template project for developing electron application by electron, react (create-react-app) and typescript.",
    "main": "build/electron.js",
    "author": {
        "name": "YF1999",
        "email": "1586939317@qq.com",
        "url": "https://github.com/YF1999"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "bugs": {
        "url": "https://github.com/YSoftwareTech/template-electron-create-react-app/issues"
    },
    "config-overrides-path": "configs/webpack.renderer.config.js",
    "eslintConfig": {
        "extends": ".eslintrc.js"
    },
    "homepage": ".",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/YSoftwareTech/template-electron-create-react-app"
    },
    "scripts": {
        "app": "electron .",
        "app:dev": "yarn build:dev && cross-env YF1999_Template_Electron_Mode=Development electron .",
        "app:web": "react-app-rewired start",
        "build": "yarn build:renderer && yarn build:main",
        "build:dev": "webpack --config configs/webpack.main.config.js --mode development",
        "build:main": "webpack --config configs/webpack.main.config.js --mode production",
        "build:renderer": "react-app-rewired build",
        "lint": "eslint src -c .eslintrc.js",
        "lint:main": "eslint src/main -c .eslintrc.js",
        "lint:renderer": "eslint src/renderer -c .eslintrc.js",
        "lint:utils": "eslint src/utils -c .eslintrc.js",
        "installer": "electron-builder build --config configs/electron-builder.yml -w --x64",
        "test": "jest --config configs/jest.config.js",
        "test:react": "react-app-rewired test"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.4.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.1",
        "react-scripts": "4.0.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/jest": "^24.0.0",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-redux": "^7.1.9",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "cross-env": "^7.0.2",
        "electron": "10.1.6",
        "electron-builder": "^22.7.0",
        "eslint-config-airbnb-typescript": "^11.0.0",
        "eslint-config-react-app": "^5.2.1",
        "eslint-plugin-jest": "^24.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "react-app-rewired": "^2.1.6",
        "ts-jest": "^26.1.3",
        "ts-loader": "^8.0.1",
        "typescript": "^4.0.5",
        "webpack-cli": "^3.3.12"
    }
}
