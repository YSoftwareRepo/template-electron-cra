{
    "name": "tecra",
    "version": "0.9.0",
    "description": "A template project for developing electron application by electron, react (CRA) and typescript.",
    "main": "build/electron.js",
    "homepage": "https://github.com/YSoftwareRepo/template-electron-cra#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/YSoftwareRepo/template-electron-cra/issues"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YSoftwareRepo/template-electron-cra.git"
    },
    "scripts": {
        "build": "pnpm run build-scripts && mkdir-working && pnpm run build-pkgs && pnpm run build-app",
        "build-app": "pnpm run build-app:renderer && pnpm run build-app:main",
        "build-app:main": "pnpm run --filter @tecra-app/electron-main build",
        "build-app:profile": "pnpm run build-app:renderer-profile && pnpm run build-app:main",
        "build-app:renderer": "pnpm run --filter @tecra-app/electron-renderer build",
        "build-app:renderer-profile": "pnpm run --filter @tecra-app/electron-renderer build-profile",
        "build-pkgs": "pnpm run --filter @tecra-pkg/* --stream build",
        "build-profile": "pnpm run build-pkgs && pnpm run build-app:profile",
        "build-scripts": "pnpm run --filter @tecra-config/scripts build-scripts",
        "clean": "rimraf build release working && pnpm run clean:packages",
        "clean:build": "rimraf build",
        "clean:packages": "pnpm run --recursive --no-sort clean",
        "clean:release": "rimraf release",
        "clean:working": "rimraf working",
        "clean-scripts": "pnpm run --filter @tecra-config/scripts clean-scripts",
        "dev": "pnpm run build-scripts && mkdir-working && pnpm run build-pkgs && pnpm run dev:app",
        "dev:app": "concurrently -n renderer,main \"pnpm run dev:renderer\" \"pnpm run dev:main\"",
        "dev:main": "pnpm run --filter @tecra-app/electron-main dev",
        "dev:renderer": "pnpm run --filter @tecra-app/electron-renderer dev",
        "format": "pnpm run format:root && pnpm run format:workspaces",
        "format:root": "prettier --write \"**/*.{cjs,css,html,js,jsx,mjs,json,less,scss,ts,tsx,yaml,yml}\"",
        "format:workspaces": "pnpm run --recursive --no-sort --stream format",
        "gen-installer": "electron-builder build --config electron-builder.json --win --publish never",
        "lint": "pnpm run --recursive --no-sort --stream lint",
        "pre-commit": "pnpm run --recursive --workspace-concurrency=1 pre-commit",
        "prepare": "husky install",
        "run-build": "run-build",
        "run-unpacked": "run-unpacked",
        "test-full": "pnpm run --recursive --no-sort --stream test-full",
        "typecheck": "pnpm run --recursive --no-sort --stream typecheck"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=8"
    },
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@babel/plugin-syntax-flow": "^7.18.6",
        "@babel/plugin-transform-react-jsx": "^7.19.0",
        "@tecra-config/scripts": "workspace:*",
        "browserslist": "^4.21.4",
        "concurrently": "^7.4.0",
        "electron": "24.5.0",
        "electron-builder": "^24.4.0",
        "husky": "^8.0.1",
        "prettier": "2.7.1",
        "react-app-rewired": "2.1.9",
        "react-scripts": "5.0.1",
        "rimraf": "^3.0.2",
        "sass": "^1.55.0",
        "typescript": "5.1.3",
        "webpack": "^5.74.0"
    },
    "pnpm": {
        "overrides": {
            "@types/jest": "^29.5.2",
            "babel-jest": "^29.5.0",
            "jest": "^29.5.0",
            "jest-environment-jsdom": "^29.5.0",
            "jest-resolve": "^29.5.0",
            "jest-watch-typeahead": "^2.2.2"
        }
    }
}
